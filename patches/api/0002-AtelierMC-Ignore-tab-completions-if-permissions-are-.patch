diff --git a/src/main/java/org/bukkit/command/PluginCommand.java b/src/main/java/org/bukkit/command/PluginCommand.java
index c660c178cad6495806c673cb5942df561a04b5e8..b05ea31ca80b37c6ca86349d59a46aac670e1ff5 100644
--- a/src/main/java/org/bukkit/command/PluginCommand.java
+++ b/src/main/java/org/bukkit/command/PluginCommand.java
@@ -128,12 +128,16 @@ public final class PluginCommand extends Command implements PluginIdentifiableCo
 
         List<String> completions = null;
         try {
-            if (completer != null) {
-                completions = completer.onTabComplete(sender, this, alias, args);
-            }
-            if (completions == null && executor instanceof TabCompleter) {
-                completions = ((TabCompleter) executor).onTabComplete(sender, this, alias, args);
+            // AtelierMC start - Don't show tab completions if the player doesn't have permission
+            if (testPermission(sender)) {
+                if (completer != null) {
+                    completions = completer.onTabComplete(sender, this, alias, args);
+                }
+                if (completions == null && executor instanceof TabCompleter) {
+                    completions = ((TabCompleter) executor).onTabComplete(sender, this, alias, args);
+                }
             }
+            // AtelierMC end
         } catch (Throwable ex) {
             StringBuilder message = new StringBuilder();
             message.append("Unhandled exception during tab completion for command '/").append(alias).append(' ');
